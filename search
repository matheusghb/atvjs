import java.util.ArrayList;

public class Main {
    public static void main(String[] args) {
        ArrayList<String> lista = new ArrayList<>();
        lista.add("maçã");
        lista.add("banana");
        lista.add("laranja");

        String itemParaProcurar = "banana";

        if (lista.contains(itemParaProcurar)) {
            System.out.println(itemParaProcurar + " está na lista.");
        } else {
            System.out.println(itemParaProcurar + " não está na lista.");
        }
    }
}
